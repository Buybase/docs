{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Buybase",
  "logo": {
    "dark": "/logo/buybase-light.svg",
    "light": "/logo/buybase-dark.svg"
  },
  "favicon": "/favicon.svg",
  "rounded": "default",
  "font": {
    "headings": {
      "family": "Geist"
    },
    "body": {
      "family": "Geist"
    }
  },
  "colors": {
    "primary": "#2DC852",
    "light": "#A7A79C",
    "dark": "#2AB74B",
    "background": {
      "dark": "#1E1E1E",
      "light": "#FCFCF7"
    },
    "anchors": {
      "from": "#0D9373",
      "to": "#07C983"
    }
  },
  "api": {
    "baseUrl": "https://api.buybase.ai"
  },
  "topbarLinks": [
    {
      "name": "Community",
      "url": "https://discord.gg/buybase"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://dashboard.buybase.ai"
  },
  "tabs": [
    {
      "name": "Docs",
      "url": "docs"
    },
    {
      "name": "API",
      "url": "api"
    }
  ],
  "navigation": [
    {
      "group": "General",
      "pages": ["/docs/welcome"]
    },
    {
      "group": "How To",
      "icon": "books",
      "pages": [
        "/docs/how-to/overview",
        "/docs/how-to/steps/create-user",
        "/docs/how-to/steps/link-user",
        "/docs/how-to/steps/search-products"
      ]
    },
    {
      "group": "Reference",
      "pages": [
        "/docs/use-cases",
        "/docs/supported-platforms",
        "/docs/security",
        "/docs/response-codes"
      ]
    },
    {
      "group": "Misc",
      "pages": ["/docs/support", "/docs/faqs"]
    },
    {
      "group": "Buy",
      "pages": ["/api/buy-item/post"]
    },
    {
      "group": "Search",
      "pages": ["/api/search/post"]
    },
    {
      "group": "Users",
      "pages": ["/api/users/create", "/api/users/get", "/api/users/delete"]
    },
    {
      "group": "Link Users",
      "pages": ["/api/link/get"]
    },
    {
      "group": "Apps",
      "pages": ["/api/apps/get"]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/buybaseai",
    "linkedin": "https://linkedin.com/company/buybaseai"
  }
}
